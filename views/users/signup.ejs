<% layout("/layouts/boilerplate") %>
<div class="row">
  <h1 class="col-6 offset-3">SignUp for WandR</h1>
  <div class="col-6 offset-3">
    <form
      method="POST"
      action="/signup"
      novalidate
      class="needs-validation"
      novalidate
    >
      <div>
        <label for="username" class="form-label">Username</label>
        <input
          id="username"
          name="username"
          placeholder="username"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div>
        <label for="email" class="form-label">Email</label>
        <input
          id="email"
          name="email"
          placeholder="email"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">password</label>
        <input
          id="password"
          name="password"
          placeholder="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
