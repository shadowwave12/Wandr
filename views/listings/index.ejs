<% layout('layouts/boilerplate') %>
<body>
  <h3>All Listings</h3>
  <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->

  <div class="row row-cols-md-2 row-cols-sm-1 row-cols-lg-3">
    <% for(let listing of allListings) { let image; try { image =
    JSON.parse(listing.image); } catch (e) { image = { url: listing.image }; }
    %>
    <a href="/listings/<%= listing._id %>" class="text-decoration-none">
      <div class="card col listing-card">
        <img
          src="<%= image.url %>"
          class="card-img-top"
          alt="<%= listing.title %>"
          style="height: 18rem"
        />
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text">
            &#8377; <%= listing.price.toLocaleString("en-IN") %> /Night
          </p>
        </div>
      </div>
    </a>

    <% } %>
  </div>
</body>
