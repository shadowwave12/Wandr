<% layout('layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <br />
      <h3>Listing Details :</h3>
      <br />
      <img
        src="<%= (() => { try { return JSON.parse(listing.image).url; } catch (e) { return listing.image; } })() %>"
        alt="listing image"
        style="height: 40%; width: 50%"
      />
      <br />
      <br />
      <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
        <!-- //locale string is used to convert the number to currency format -->
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
      </ul>
      <a href="/listings/<%= listing._id %>/edit">Edit this Listing</a>
      <br /><br />
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button>Delete this listing</button>
      </form>
    </div>
  </div>
</body>
